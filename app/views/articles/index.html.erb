<h1>Bog Creatures</h1>
<%= link_to 'Add New Creature', new_article_path, class:"btn btn-primary" %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="4"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr class ="well">
      <td><%= article.name %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show ', article_path(article), class:"btn btn-success" %></td>
      <td><%= link_to ' Edit ', edit_article_path(article), class:"btn btn-warning"%></td>
      <td><%= link_to ' Delete', article_path(article), class:"btn btn-danger",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>